datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// ===== ENUMS =====

enum IdentityProvider {
  EMAIL
  GOOGLE
}

enum BookingStatus {
  PENDING
  ACCEPTED
  CANCELLED
  REJECTED
}

enum PeriodType {
  UNLIMITED
  ROLLING
  RANGE
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
  INCOMPLETE
  INCOMPLETE_EXPIRED
  UNPAID
  PAUSED
}

enum BillingInterval {
  MONTH
  YEAR
}

// ===== ORGANIZATIONS =====

model Organization {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  name      String
  slug      String   @unique
  logoUrl   String?
  timeZone  String   @default("Europe/Belgrade")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members    Membership[]
  eventTypes EventType[]

  @@index([slug])
}

model Membership {
  id       String         @id @default(dbgenerated("gen_random_uuid()"))
  role     MembershipRole @default(MEMBER)
  accepted Boolean        @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

// ===== USERS & AUTH =====

model User {
  id                 String           @id @default(dbgenerated("gen_random_uuid()"))
  email              String           @unique
  name               String?
  salonName          String?          @unique
  password           UserPassword?
  avatarUrl          String?
  bio                String?
  timeZone           String           @default("Europe/Belgrade")
  weekStart          String           @default("Monday")
  locale             String           @default("sr")
  identityProvider   IdentityProvider @default(EMAIL)
  identityProviderId String?
  emailVerified      DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  // Appearance settings
  theme          String? // "light" | "dark" | null (system)
  brandColor     String? @default("#292929")
  darkBrandColor String? @default("#fafafa")

  // Relations
  eventTypes          EventType[]
  bookings            Booking[]            @relation("organizer")
  schedules           Schedule[]
  defaultScheduleId   String?
  accounts            Account[]
  sessions            Session[]
  credentials         Credential[]
  selectedCalendars   SelectedCalendar[]
  destinationCalendar DestinationCalendar?
  memberships         Membership[]
  outOfOfficeEntries  OutOfOffice[]
  subscription        Subscription?

  @@index([email])
  @@index([salonName])
}

model UserPassword {
  hash   String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===== EVENT TYPES =====

model EventType {
  id          String  @id @default(dbgenerated("gen_random_uuid()"))
  title       String
  slug        String
  description String?
  length      Int // Duration in minutes
  hidden      Boolean @default(false)
  position    Int     @default(0)

  // Location (in-person address as JSON for flexibility)
  locations Json?

  // Booking settings
  minimumBookingNotice Int     @default(120) // minutes
  beforeEventBuffer    Int     @default(0)
  afterEventBuffer     Int     @default(0)
  slotInterval         Int?
  requiresConfirmation Boolean @default(false)
  disableGuests        Boolean @default(false)

  // Period limiting
  periodType      PeriodType @default(UNLIMITED)
  periodStartDate DateTime?
  periodEndDate   DateTime?
  periodDays      Int?

  // Scheduling
  scheduleId String?
  schedule   Schedule? @relation(fields: [scheduleId], references: [id])

  // Owner
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Organization (optional - for org-level event types)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Calendar
  destinationCalendar DestinationCalendar?

  // Relations
  bookings     Booking[]
  availability Availability[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, slug])
  @@index([userId])
  @@index([scheduleId])
  @@index([organizationId])
}

// ===== SCHEDULES & AVAILABILITY =====

model Schedule {
  id           String         @id @default(dbgenerated("gen_random_uuid()"))
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  timeZone     String?
  availability Availability[]
  eventTypes   EventType[]

  @@index([userId])
}

model Availability {
  id          String     @id @default(dbgenerated("gen_random_uuid()"))
  userId      String?
  scheduleId  String?
  schedule    Schedule?  @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  eventTypeId String?
  eventType   EventType? @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)
  days        Int[] // 0-6 for days of week (0 = Sunday)
  startTime   DateTime   @db.Time
  endTime     DateTime   @db.Time
  date        DateTime?  @db.Date // For date-specific overrides

  @@index([scheduleId])
  @@index([eventTypeId])
  @@index([userId])
}

// ===== CALENDAR SYNC =====

model Credential {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  type      String // e.g., "google_calendar"
  key       Json // OAuth tokens (access_token, refresh_token, expiry_date, etc.)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appId     String? // e.g., "google-calendar"
  invalid   Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  selectedCalendars    SelectedCalendar[]
  destinationCalendars DestinationCalendar[]

  @@index([userId])
  @@index([type])
}

model SelectedCalendar {
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  integration  String
  externalId   String
  credentialId String?
  credential   Credential? @relation(fields: [credentialId], references: [id], onDelete: Cascade)

  @@id([userId, integration, externalId])
  @@index([userId])
  @@index([credentialId])
}

model DestinationCalendar {
  id           String      @id @default(dbgenerated("gen_random_uuid()"))
  integration  String
  externalId   String
  credentialId String?
  credential   Credential? @relation(fields: [credentialId], references: [id], onDelete: Cascade)
  userId       String?     @unique
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventTypeId  String?     @unique
  eventType    EventType?  @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([credentialId])
}

// ===== BOOKINGS =====

model Booking {
  id          String     @id @default(dbgenerated("gen_random_uuid()"))
  uid         String     @unique @default(dbgenerated("gen_random_uuid()"))
  userId      String?
  user        User?      @relation("organizer", fields: [userId], references: [id], onDelete: Cascade)
  eventTypeId String?
  eventType   EventType? @relation(fields: [eventTypeId], references: [id])

  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  location    String? // Physical address for in-person

  status             BookingStatus @default(ACCEPTED)
  cancellationReason String?
  rejectionReason    String?
  rescheduled        Boolean?
  fromReschedule     String? // UID of rescheduled booking

  // Custom responses (form fields)
  responses Json?

  // Attendees
  attendees Attendee[]

  // Booking references (calendar events)
  references BookingReference[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventTypeId])
  @@index([userId])
  @@index([uid])
  @@index([status])
  @@index([startTime, endTime])
}

model Attendee {
  id          String  @id @default(dbgenerated("gen_random_uuid()"))
  email       String
  name        String
  timeZone    String  @default("Europe/Belgrade")
  phoneNumber String?
  locale      String  @default("sr")
  bookingId   String
  booking     Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([bookingId])
}

model BookingReference {
  id                 String   @id @default(dbgenerated("gen_random_uuid()"))
  type               String // calendar type: google_calendar, etc.
  uid                String // external calendar event UID
  meetingId          String?
  meetingPassword    String?
  meetingUrl         String?
  externalCalendarId String?
  deleted            Boolean?
  credentialId       String?
  bookingId          String?
  booking            Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([credentialId])
  @@index([type])
}

// ===== OUT OF OFFICE =====

model OutOfOfficeReason {
  id           String        @id @default(dbgenerated("gen_random_uuid()"))
  emoji        String        @default("üèùÔ∏è")
  reason       String        @unique
  userId       String? // null = global/system reason, userId = custom user reason
  enabled      Boolean       @default(true)
  outOfOffices OutOfOffice[]

  @@index([userId])
}

model OutOfOffice {
  id        String             @id @default(dbgenerated("gen_random_uuid()"))
  uuid      String             @unique @default(dbgenerated("gen_random_uuid()"))
  userId    String
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  start     DateTime           @db.Date
  end       DateTime           @db.Date
  notes     String?
  reasonId  String?
  reason    OutOfOfficeReason? @relation(fields: [reasonId], references: [id])
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([userId])
  @@index([start, end])
}

// ===== SUBSCRIPTIONS =====

model Subscription {
  id     String @id @default(dbgenerated("gen_random_uuid()"))
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe references
  stripeCustomerId     String  @unique
  stripeSubscriptionId String? @unique
  stripePriceId        String?

  // Status and billing
  status          SubscriptionStatus @default(TRIALING)
  billingInterval BillingInterval?

  // Trial tracking
  trialStartedAt DateTime?
  trialEndsAt    DateTime?

  // Subscription period
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean   @default(false)
  canceledAt         DateTime?

  // Dunning management (failed payment tracking)
  lastDunningEmailAt DateTime? // When last dunning email was sent
  dunningEmailCount  Int       @default(0) // Number of dunning emails sent
  lastReminderSentAt DateTime? // When last trial reminder was sent

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events SubscriptionEvent[]

  @@index([stripeCustomerId])
  @@index([status])
  @@index([trialEndsAt]) // For cron job trial expiration queries
  @@index([currentPeriodEnd]) // For subscription expiration queries
}

model SubscriptionEvent {
  id             String       @id @default(dbgenerated("gen_random_uuid()"))
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  stripeEventId String   @unique
  eventType     String
  eventData     Json
  processedAt   DateTime @default(now())

  @@index([subscriptionId])
}
