{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@zakazi-termin/prisma": ["packages/prisma/src"],
      "@zakazi-termin/prisma/*": ["packages/prisma/src/*"],
      "@zakazi-termin/scheduling": ["packages/scheduling/src"],
      "@zakazi-termin/scheduling/*": ["packages/scheduling/src/*"],
      "@zakazi-termin/ui": ["packages/ui/src"],
      "@zakazi-termin/ui/*": ["packages/ui/src/*"],
      "@zakazi-termin/config": ["packages/config/src"],
      "@zakazi-termin/config/*": ["packages/config/src/*"],
      "@zakazi-termin/emails": ["packages/emails/src"],
      "@zakazi-termin/emails/*": ["packages/emails/src/*"],
      "@zakazi-termin/trpc": ["packages/trpc/src"],
      "@zakazi-termin/trpc/*": ["packages/trpc/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
