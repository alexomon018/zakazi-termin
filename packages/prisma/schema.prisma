datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// ===== ENUMS =====

enum IdentityProvider {
  EMAIL
  GOOGLE
}

enum BookingStatus {
  PENDING
  ACCEPTED
  CANCELLED
  REJECTED
}

enum PeriodType {
  UNLIMITED
  ROLLING
  RANGE
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

// ===== ORGANIZATIONS =====

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  logoUrl   String?
  timeZone  String   @default("Europe/Belgrade")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members    Membership[]
  eventTypes EventType[]

  @@index([slug])
}

model Membership {
  id       Int            @id @default(autoincrement())
  role     MembershipRole @default(MEMBER)
  accepted Boolean        @default(false)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

// ===== USERS & AUTH =====

model User {
  id                 Int              @id @default(autoincrement())
  email              String           @unique
  name               String?
  salonName          String?          @unique
  password           UserPassword?
  avatarUrl          String?
  bio                String?
  timeZone           String           @default("Europe/Belgrade")
  weekStart          String           @default("Monday")
  locale             String           @default("sr")
  identityProvider   IdentityProvider @default(EMAIL)
  identityProviderId String?
  emailVerified      DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  // Appearance settings
  theme          String? // "light" | "dark" | null (system)
  brandColor     String? @default("#292929")
  darkBrandColor String? @default("#fafafa")

  // Relations
  eventTypes          EventType[]
  bookings            Booking[]            @relation("organizer")
  schedules           Schedule[]
  defaultScheduleId   Int?
  accounts            Account[]
  sessions            Session[]
  credentials         Credential[]
  selectedCalendars   SelectedCalendar[]
  destinationCalendar DestinationCalendar?
  memberships         Membership[]
  outOfOfficeEntries  OutOfOffice[]

  @@index([email])
  @@index([salonName])
}

model UserPassword {
  hash   String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===== EVENT TYPES =====

model EventType {
  id          Int     @id @default(autoincrement())
  title       String
  slug        String
  description String?
  length      Int // Duration in minutes
  hidden      Boolean @default(false)
  position    Int     @default(0)

  // Location (in-person address as JSON for flexibility)
  locations Json?

  // Booking settings
  minimumBookingNotice Int     @default(120) // minutes
  beforeEventBuffer    Int     @default(0)
  afterEventBuffer     Int     @default(0)
  slotInterval         Int?
  requiresConfirmation Boolean @default(false)
  disableGuests        Boolean @default(false)

  // Period limiting
  periodType      PeriodType @default(UNLIMITED)
  periodStartDate DateTime?
  periodEndDate   DateTime?
  periodDays      Int?

  // Scheduling
  scheduleId Int?
  schedule   Schedule? @relation(fields: [scheduleId], references: [id])

  // Owner
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Organization (optional - for org-level event types)
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Calendar
  destinationCalendar DestinationCalendar?

  // Relations
  bookings     Booking[]
  availability Availability[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, slug])
  @@index([userId])
  @@index([scheduleId])
  @@index([organizationId])
}

// ===== SCHEDULES & AVAILABILITY =====

model Schedule {
  id           Int            @id @default(autoincrement())
  userId       Int
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  timeZone     String?
  availability Availability[]
  eventTypes   EventType[]

  @@index([userId])
}

model Availability {
  id          Int        @id @default(autoincrement())
  userId      Int?
  scheduleId  Int?
  schedule    Schedule?  @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  eventTypeId Int?
  eventType   EventType? @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)
  days        Int[] // 0-6 for days of week (0 = Sunday)
  startTime   DateTime   @db.Time
  endTime     DateTime   @db.Time
  date        DateTime?  @db.Date // For date-specific overrides

  @@index([scheduleId])
  @@index([eventTypeId])
  @@index([userId])
}

// ===== CALENDAR SYNC =====

model Credential {
  id        Int      @id @default(autoincrement())
  type      String // e.g., "google_calendar"
  key       Json // OAuth tokens (access_token, refresh_token, expiry_date, etc.)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appId     String? // e.g., "google-calendar"
  invalid   Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  selectedCalendars    SelectedCalendar[]
  destinationCalendars DestinationCalendar[]

  @@index([userId])
  @@index([type])
}

model SelectedCalendar {
  userId       Int
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  integration  String
  externalId   String
  credentialId Int?
  credential   Credential? @relation(fields: [credentialId], references: [id], onDelete: Cascade)

  @@id([userId, integration, externalId])
  @@index([userId])
  @@index([credentialId])
}

model DestinationCalendar {
  id           Int         @id @default(autoincrement())
  integration  String
  externalId   String
  credentialId Int?
  credential   Credential? @relation(fields: [credentialId], references: [id], onDelete: Cascade)
  userId       Int?        @unique
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventTypeId  Int?        @unique
  eventType    EventType?  @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([credentialId])
}

// ===== BOOKINGS =====

model Booking {
  id          Int        @id @default(autoincrement())
  uid         String     @unique @default(uuid())
  userId      Int?
  user        User?      @relation("organizer", fields: [userId], references: [id], onDelete: Cascade)
  eventTypeId Int?
  eventType   EventType? @relation(fields: [eventTypeId], references: [id])

  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  location    String? // Physical address for in-person

  status             BookingStatus @default(ACCEPTED)
  cancellationReason String?
  rejectionReason    String?
  rescheduled        Boolean?
  fromReschedule     String? // UID of rescheduled booking

  // Custom responses (form fields)
  responses Json?

  // Attendees
  attendees Attendee[]

  // Booking references (calendar events)
  references BookingReference[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventTypeId])
  @@index([userId])
  @@index([uid])
  @@index([status])
  @@index([startTime, endTime])
}

model Attendee {
  id          Int     @id @default(autoincrement())
  email       String
  name        String
  timeZone    String  @default("Europe/Belgrade")
  phoneNumber String?
  locale      String  @default("sr")
  bookingId   Int
  booking     Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([bookingId])
}

model BookingReference {
  id                 Int      @id @default(autoincrement())
  type               String // calendar type: google_calendar, etc.
  uid                String // external calendar event UID
  meetingId          String?
  meetingPassword    String?
  meetingUrl         String?
  externalCalendarId String?
  deleted            Boolean?
  credentialId       Int?
  bookingId          Int?
  booking            Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([credentialId])
  @@index([type])
}

// ===== OUT OF OFFICE =====

model OutOfOfficeReason {
  id           Int           @id @default(autoincrement())
  emoji        String        @default("üèùÔ∏è")
  reason       String
  userId       Int? // null = global/system reason, userId = custom user reason
  enabled      Boolean       @default(true)
  outOfOffices OutOfOffice[]

  @@index([userId])
}

model OutOfOffice {
  id        Int                @id @default(autoincrement())
  uuid      String             @unique @default(uuid())
  userId    Int
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  start     DateTime           @db.Date
  end       DateTime           @db.Date
  notes     String?
  reasonId  Int?
  reason    OutOfOfficeReason? @relation(fields: [reasonId], references: [id])
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([userId])
  @@index([start, end])
}
